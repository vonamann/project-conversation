<h3>Comments</h3>
<%= link_to 'Add new comment', new_comment_path, class: 'new-comment-link' %>
<% if @comments.empty? %>
  <div>No comments yet</div>
<% else %>
  <% @comments.each do |comment| %>
    <div class="comment">
      <div class="created-at"><%= comment.created_at.strftime(DATE_FORMAT) %></div>
      <div class="text"><%= comment.text %></div>
    </div>
  <% end %>
<% end %>

<%= link_to 'Back to the project page', root_path, class: 'back-link' %>
